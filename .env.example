# ==============================================
# n8n Production Environment Configuration
# ==============================================

# Domain Configuration
# Replace with your actual domain name
N8N_HOST=n8n.yourdomain.com
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.yourdomain.com/

# SSL/TLS Configuration
# Your real email address for Let's Encrypt notifications
ACME_EMAIL=your-email@example.com

# Timezone Configuration
# Set to your server's timezone (list: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
GENERIC_TIMEZONE=Europe/Warsaw

# Security Configuration
# IMPORTANT: Generate a strong random key (32+ characters)
# You can generate one using: openssl rand -base64 32
N8N_ENCRYPTION_KEY=your-very-strong-random-encryption-key-here

# Proxy Configuration
N8N_TRUST_PROXY=true
N8N_TRUST_HOST=true

# Performance Configuration
DB_SQLITE_POOL_SIZE=5
N8N_PAYLOAD_SIZE_MAX=16

# Feature Flags
N8N_RUNNERS_ENABLED=true
N8N_BLOCK_ENV_ACCESS_IN_NODE=false

# Logging Configuration
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Execution Configuration
EXECUTIONS_PROCESS=main
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_MAX_AGE=336

# ==============================================
# Optional Advanced Configuration
# ==============================================

# SMTP Configuration (optional)
# N8N_SMTP_HOST=smtp.gmail.com
# N8N_SMTP_PORT=587
# N8N_SMTP_USER=your-email@gmail.com
# N8N_SMTP_PASS=your-app-password
# N8N_SMTP_SENDER=your-email@gmail.com

# Authentication Configuration (optional)
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=your-secure-password

# External Database (optional - use PostgreSQL for production)
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=postgres
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=your-db-password
